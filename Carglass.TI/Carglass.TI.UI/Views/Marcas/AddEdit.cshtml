@model Carglass.TI.UI.ViewModels.MarcaAddEditVM

<h2>@(Model == null  ? "Adicionar" : "Editar") Marca</h2>

<form method="post">
    <div class="mb-3">
        <label for="txtNome" class="form-label">Nome</label>
        @Html.TextBoxFor(model => model.BrandName, new { @class = "form-control", autofocus = "" })
        @Html.ValidationMessageFor(x => x.BrandName, null, new {@class="invalid-estilo" })
    </div>

    <button type="submit" class="btn btn-outline-success">Salvar</button>
    <a href="/Marcas" class="btn btn-outline-warning">Cancelar</a>
</form>
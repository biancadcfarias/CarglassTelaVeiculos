@model UsuarioAddEditVM

<h2>@(Model.Id == 0  ? "Adicionar" : "Editar") Veiculo</h2>


<form method="post">
    <div class="mb-3">
        @Html.LabelFor(x => x.Nome, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", autofocus = "" })
        @Html.ValidationMessageFor(x => x.Nome, null, new { @class = "invalid-estilo" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Email, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "invalid-estilo" })
    </div>

        @if (Model.Id == 0)
        {
            <div class="mb-3">
                @Html.LabelFor(x => x.Senha, new { @class = "form-label" })
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Senha, null, new { @class = "invalid-estilo" })
            </div>
         }

    <div class="mb-3">
        @Html.LabelFor(x => x.Genero, new { @class = "form-label" })
        @Html.DropDownListFor(x => x.Genero, Model.Generos, "Selecione", new { @class = "form-select" })
        @Html.ValidationMessageFor(x => x.Genero, null, new { @class = "invalid-estilo" })

    </div>


    <button type="submit" class="btn btn-outline-success">Salvar</button>
    <a href="/Veiculos" class="btn btn-outline-warning">Cancelar</a>
</form>